{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:allow-set-title",
    "core:webview:allow-clear-all-browsing-data",
    "core:window:default",
    "core:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.vrchat.cloud"
        },
        {
          "url": "https://vrchat.com"
        },
        {
          "url": "https://paw-api.amelia.fun"
        },
        {
          "url": "https://api.github.com"
        }
      ]
    },
    "http:allow-fetch-cancel-body",
    "log:default",
    "rusqlite2:allow-close",
    "rusqlite2:allow-execute",
    "rusqlite2:allow-load",
    "rusqlite2:allow-select",
    "fs:default",
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-read-recursive",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-write-recursive",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-read",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-write",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-meta-recursive",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-home-meta",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:scope-home-recursive",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:scope-appdata",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:scope-home-index",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open-github-repository",
          "cmd": "open",
          "args": "open: ^https://github.com/Ameliaaaaaaa/PAW-APP/releases/latest"
        },
        {
          "name": "open-github-repository",
          "cmd": "open",
          "args": "open: ^https://github.com/Ameliaaaaaaa/PAW-APP"
        }
      ]
    },
    "shell:default",
    "dialog:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPLOCALDATA"
        },
        {
          "path": "$APPLOCALDATA/logs"
        }
      ]
    }
  ]
}